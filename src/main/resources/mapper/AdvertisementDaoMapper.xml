<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baoleme.dao.AdvertisementDao">
    <select id="getAll" parameterType="long" resultType="Advertisement">
        SELECT advertisement.*, type.name as type FROM advertisement LEFT JOIN type
        on advertisement.typeId = type.id
    </select>
</mapper>